pipeline {
   agent any
   environment {
       registry = "lutherus/cloudwerkstatt"
       GOCACHE = "/tmp"
   }
   stages {
       stage('Build') {
           agent {
               docker {
                   image 'golang'
               }
           }
           steps {
               sh 'cd ${GOPATH}/src'
               sh 'mkdir -p ${GOPATH}/src/hello-cloudwerkstatt'            
               sh 'cp -r ${WORKSPACE}/app/* ${GOPATH}/src/hello-cloudwerkstatt'
               sh 'go build'              
           }    
       }
       stage('Test') {
           agent {
               docker {
                   image 'golang'
               }
           }
           steps {                
               sh 'cd ${GOPATH}/src'
               sh 'mkdir -p ${GOPATH}/src/hello-cloudwerkstatt'             
               sh 'cp -r ${WORKSPACE}/app/* ${GOPATH}/src/hello-cloudwerkstatt'
               sh 'go clean -cache'
               sh 'go test ./... -v -short'           
           }
       }
       stage('Publish') {
           environment {
               registryCredential = 'dockerhub'
           }
           steps{
               script {
                   def appimage = docker.build registry + ":$BUILD_NUMBER"
                   docker.withRegistry( '', registryCredential ) {
                       appimage.push()
                       appimage.push('latest')
                   }
               }
           }
       }
       stage ('Deploy') {
           steps {
               script{
                   def image_id = registry + ":$BUILD_NUMBER"
                   sh "ansible-playbook  playbook/playbook.yml --extra-vars \"image_id=${image_id}\""
               }
           }
       }
   }
}

